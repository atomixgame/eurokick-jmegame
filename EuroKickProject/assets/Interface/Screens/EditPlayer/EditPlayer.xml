<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="editPlayer" controller="mygame.Main">
        <layer id="layer" childLayout="vertical" >
            <effect>
                <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
            </effect>

            <panel padding="10px" id="panel" height="10%" width="100%" align="center" valign="center" backgroundColor="#000c" childLayout="center" >
                <text id="text" font="Interface/Fonts/Arial.fnt" color="#ffff" text="EDIT PLAYER." align="left" valign="center" />
                
            </panel>
            <panel id="panel" height="65%" width="100%" align="center" valign="top" childLayout="horizontal" visibleToMouse="true">
                <panel padding="20px"  childLayout="vertical"  width="50%">
                    <text id="text2" width="100%" textSize="8" font="Interface/Fonts/vietnam1.fnt" color="#ffff" text="Nguyễn Mạnh Cường ATOMIX" wrap="true" align="left" valign="center" />
                    <text id="text" font="aurulent-sans-16.fnt" color="#ffff" text="Name" align="left" valign="center" />    
                    
                    <control name="textfield" maxLength="20" />
                    <text id="text" font="aurulent-sans-16.fnt" color="#ffff" text="Ball control" align="left" valign="center" />    
                    <control id="sliderH" name="horizontalSlider" />
                    <text id="text" font="aurulent-sans-16.fnt" color="#ffff" text="Passing" align="left" valign="center" />    
                    <control id="sliderH" name="horizontalSlider" />
                    <text id="text" font="aurulent-sans-16.fnt" color="#ffff" text="Shoot" align="left" valign="center" />    
                    <control id="sliderH" name="horizontalSlider" />
                    <text id="text" font="aurulent-sans-16.fnt" color="#ffff" text="Goal keeping" align="left" valign="center" />    
                    <control id="sliderH" name="horizontalSlider" />
                    
                
                </panel>
            </panel>
            <panel id="panel" height="15%" width="100%" align="center" valign="bottom" backgroundColor="#000c" childLayout="horizontal" visibleToMouse="true">
                <panel padding="10px" width="20%" childLayout="center">
                    <control name="button" label="BACK"/>
                </panel>
                <panel padding="10px" width="20%" childLayout="center">
                    <control name="button" label="BACK"/>
                </panel>
                <panel padding="10px" width="20%" childLayout="center">
                    <control name="button" label="BACK"/>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
