<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="Interface/Styles/ClearStyle1/clear-styles.xml"/>
    <screen id="MainMenuScreen" controller="sg.games.football.ui.MainMenuScreenUI">
        <layer id="layer1" childLayout="center" backgroundImage="Interface/Images/bg/euro2012 wall.jpg">
            <panel id="panel" childLayout="vertical" width="35%" valign="bottom" align="center" height="63%">
                <panel id="GPanel1" childLayout="vertical" padding="6px" width="100%" valign="top" align="center" height="*">
                    <control name="button" id="start_button" width="100%" style="clear-button" label="Single Game" align="center"/>
                    <control name="button" id="multiplayer_button" width="100%" style="clear-button" label="Multiplay" align="center"/>
                    <control name="button" id="save_load_button" width="100%" style="clear-button" label="Save / Load" align="center"/>
                    <control name="button" id="options_button" width="100%" style="clear-button" label="Options" align="center"/>
                    <control name="button" id="credit_button" width="100%" style="clear-button" label="Credit" align="center"/>
                    <control name="button" id="exit_button" width="100%" style="clear-button" label="Quit Game" align="center"/>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
